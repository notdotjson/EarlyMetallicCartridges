<?xml version="1.0" encoding="UTF-8"?>
<Patch>
	<!-- We can safely patch in 45 Colt BP to all applicable firearms, as there are no autoloaders in this category -->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/CombatExtended.AmmoSetDef[defName="AmmoSet_45Colt"]/ammoTypes</xpath>
		<value>
			<Ammo_45Colt_BP>Bullet_45Colt_BP</Ammo_45Colt_BP>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/CombatExtended.AmmoSetDef[defName="AmmoSet_45Colt_HV"]/ammoTypes</xpath>
		<value>
			<Ammo_45Colt_BP>Bullet_45Colt_HV_BP</Ammo_45Colt_BP>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/CombatExtended.AmmoSetDef[defName="AmmoSet_45Colt410Bore"]/ammoTypes</xpath>
		<value>
			<Ammo_45Colt_BP>Bullet_45Colt_HV_BP</Ammo_45Colt_BP>
		</value>
	</Operation>
	
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/CombatExtended.AmmoSetDef[defName="AmmoSet_45Colt410Bore_SB"]/ammoTypes</xpath>
		<value>
			<Ammo_45Colt_BP>Bullet_45Colt_BP</Ammo_45Colt_BP>
		</value>
	</Operation>
</Patch>